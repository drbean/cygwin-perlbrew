#ninja {
    background: url(../images/ninja.png) no-repeat;
    width:104px;
    height:142px;
    position:absolute;
    right:0;
    top:-10px;
    z-index:99;
    span {
        display:none;
        background: url(../images/github.png) no-repeat;
        margin:40px 0 0 90px;
        width:127px;
        height:84px;
        text-indent:-9999em;
    }
    &:hover {
        background: url(../images/ninja-nude.png) no-repeat;
        span { display:block; }
    }
}

@-webkit-keyframes ninja {
    0% {-webkit-transform: rotate(0deg);}
    1% {-webkit-transform: rotate(0deg);}
    14% {-webkit-transform: rotate(1deg);}
    20% {-webkit-transform: rotate(4deg);}
    30% {-webkit-transform: rotate(10deg);}
    40% {-webkit-transform: rotate(14deg);}
    50% {-webkit-transform: rotate(15deg);}
    60% {-webkit-transform: rotate(14deg);}
    70% {-webkit-transform: rotate(10deg);}
    80% {-webkit-transform: rotate(4deg);}
    90% {-webkit-transform: rotate(1deg);}
    100% {-webkit-transform: rotate(0deg);}
}

@-moz-keyframes ninja {
    0% {-moz-transform: rotate(0deg);}
    1% {-moz-transform: rotate(0deg);}
    14% {-moz-transform: rotate(1deg);}
    20% {-moz-transform: rotate(4deg);}
    30% {-moz-transform: rotate(10deg);}
    40% {-moz-transform: rotate(14deg);}
    50% {-moz-transform: rotate(15deg);}
    60% {-moz-transform: rotate(14deg);}
    70% {-moz-transform: rotate(10deg);}
    80% {-moz-transform: rotate(4deg);}
    90% {-moz-transform: rotate(1deg);}
    100% {-moz-transform: rotate(0deg);}
}

#ninja {
    -webkit-animation-name: ninja;
    -webkit-animation-duration: 6s;
    -webkit-animation-iteration-count: infinite;
    -webkit-transform-origin: 0 5%;
    -webkit-animation-timing-function: linear;
    -moz-animation-name: ninja;
    -moz-animation-duration: 6s;
    -moz-animation-iteration-count: infinite;
    -moz-transform-origin: 0 5%;
    -moz-animation-timing-function: linear;
}


/* `Section
-----------------------------------------------------------------------------*/

section {
    background: url(../images/hr.png) left bottom no-repeat;
    display:block;
    margin-bottom:20px;
    padding-bottom:20px;
    h2 {
        margin-top:0.5em;
        font-size:30px;
    }
    ul li {
        list-style:url(../images/icon-shuriken.png);
    }
}

code {
    @include box-shadow(0 1px 0 rgba(#fff, 0.7), rgba(#000, 0.3) 0 0 5px inset);
    padding:2px 5px;
}

pre {
    @include border-radius(5px);
    @include box-shadow(-1px 1px 0 rgba(#fff, 0.7), rgba(#000, 0.7) -1px 1px 2px inset);
    background: #67481d;
    padding:20px;
    code {
        @include border-radius(3px);
        @include box-shadow(0 1px 0 rgba(#fff, 0), rgba(#000, 0) 0 0 5px inset);
        background: #67481d;
        padding:0;
        color:#fff;
    }
}

/* `Footer
-----------------------------------------------------------------------------*/

footer {
    @extend .inner;
    display:block;
    padding:10px 0 60px;
    color:#ad8f59;
    address {font-style:normal; color:#999;}
}
