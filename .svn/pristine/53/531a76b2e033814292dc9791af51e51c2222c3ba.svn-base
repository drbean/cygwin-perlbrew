/* `Base
-----------------------------------------------------------------------------*/

html { background: #ffd893 url(../images/bg.png) center top repeat-x; height: 100%;}

body {
    background: url(../images/bg-radiation.png) center -200px no-repeat;
    margin: 0;
    font-family: 'Vollkorn', arial, serif;
    color: #3c3326;
    font-size: 15px;
    height: 100%;
}

a {
    &:link {
        color: #1b8cdc;
        text-decoration: none;}
    &:visited {color: #1b8cdc; text-decoration: none;}
    &:hover, &:active{color: #ee35e3;}
}

.clearfix:after {
    content: ".";
    display: block;
    height: 0;
    clear: both;
    visibility: hidden;
}

.clearfix {
    display:inline-block;
}
/* Hide from IE Mac \*/

.clearfix {
    display:block;
}
/* End hide from IE Mac */

.inner {
    margin:0 auto;
    width:800px;
}

.menu, .menu li {
    margin: 0;
    padding: 0;
    list-style-type: none;
    li {float: left;}
}

/* `Nav
-----------------------------------------------------------------------------*/

nav {
    @extend .clearfix;
    background: url(../images/bg-nav.png) left top repeat-x;
    height:43px;
    position:relative;
    z-index:100;
    .inner {
        @extend .clearfix;
        @include box-shadow(rgba(#292929, 1) 1px 0 0);
        border-right:1px solid #101010;
        ul {
            @extend .menu;
            @extend .clearfix;
            float:right;
            a {
                @include box-shadow(rgba(#292929, 1) -1px 0 0);
                border-left:1px solid #101010;
                display:block;
                float:left;
                padding:0 20px;
                height:40px;
                font-size:14px;
                line-height:40px;
                color:#b7ab8a;
                text-shadow: 0 -1px 0 rgba(0,0,0,1);
                &:hover { color:#efb55f; }
            }
        }
    }
}

